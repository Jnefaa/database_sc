{% extends 'base.html.twig' %}

{% block title %}Enseignant index{% endblock %}

{% block body %}
    <h1>Enseignant index</h1>

    <table class="table">
        <thead>
            <tr>
            
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>DateNais</th>
                <th>Email</th>
                <th>Adress</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for enseignant in enseignants %}
            <tr>
            <td>
                {% for matiere in enseignant.matieres %}
                {{ matiere.titre }}-
                {% endfor %}
              </td>

                <td>{{ enseignant.id }}</td>
                <td>{{ enseignant.Nom }}</td>
                <td>{{ enseignant.Prenom }}</td>
                <td>{{ enseignant.DateNais ? enseignant.DateNais|date('Y-m-d') : '' }}</td>
                <td>{{ enseignant.Email }}</td>
                <td>{{ enseignant.adress }}</td>
                <td>
                    <a href="{{ path('enseignant_show', {'id': enseignant.id}) }}">show</a>
                    <a href="{{ path('enseignant_edit', {'id': enseignant.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('enseignant_new') }}">Create new</a>
{% endblock %}
